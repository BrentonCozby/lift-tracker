{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "shared-node-browser": true,
        "serviceworker": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "plugins": [
        "react",
        "babel"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-case-declarations": "off",
        "no-console": "off",
        "no-fallthrough": "off"
    },
    "globals": {
        "PP": false,
        "SITE_TITLE": false,
        "SITE_NAME": false,
        "DESCRIPTION": false,
        "SITE_URL": false,
        "SITE_IMAGE": false,
        "DEVELOPER_NAME": false,
        "DEVELOPER_URL": false,
        "GOOGLE_ANALYTICS_ID": false,
        "DEV_PATH": false
    }
}