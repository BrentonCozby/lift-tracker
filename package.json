    "license": "MIT",
    "scripts": {
        "dev:api": "cross-env rimraf ./dist/api && webpack --config ./webpack/api.index.babel.js",
        "prod:api": "cross-env NODE_ENV=production babel-node dist/api/api.bundle.js",
        "dev:client": "cross-env rimraf ./dist/client && webpack-dev-server --config ./webpack/client.index.babel.js",
        "dev": "cross-env rimraf dist && npm-run-all --parallel dev:api dev:client",
        "build:api": "rimraf ./dist/api && cross-env NODE_ENV=production webpack -p --config ./webpack/api.index.babel.js --progress --profile --colors",
        "build:client": "rimraf ./dist/client && cross-env NODE_ENV=production webpack -p --config ./webpack/client.index.babel.js --progress --profile --colors",
        "build": "npm-run-all --parallel build:api build:client",
        "build-sw": "babel-node build-service-worker.js",
        "eslint": "eslint",
        "test": "jest --config ./jest.config.json",
        "test:w": "npm test -- --watchAll",
        "coverage": "open ./coverage/lcov-report/index.html"
    },
